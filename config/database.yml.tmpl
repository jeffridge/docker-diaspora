postgresql: &postgresql
  adapter: postgresql
  host: "{{getv "/db/host" "postgres"}}"
  port: {{getv "/db/port" "5432"}}
  username: "{{getv "/db/user" "diaspora"}}"
  password: "{{getv "/db/password" "diaspora"}}"
  encoding: unicode

mysql: &mysql
  adapter: mysql2
  host: "{{getv "/db/host" "mysql"}}"
  port: {{getv "/db/port" "3306"}}
  username: "{{getv "/db/user" "root"}}"
  password: "{{getv "/db/password" ""}}"
#  socket: /tmp/mysql.sock
  encoding: utf8mb4
  collation: utf8mb4_bin


# Comment the postgresql line and uncomment the mysql line
# if you want to use mysql
common: &common
  # Choose one of the following
  {{if eq (getv "/db/type" "postgresql") ("postgresql") }}
  <<: *postgresql
  #<<: *mysql
  {{else if eq (getv "/db/type" "postgresql") ("mysql")}}
  #<<: *postgresql
  <<: *mysql
  {{end}}

  # Should match environment.sidekiq.concurrency
  #pool: 25

##################################################
#### CONFIGURE ABOVE #############################
##################################################

# Normally you don't need to touch anything here

combined: &combined
  <<: *common
development:
  <<: *combined
  database: diaspora_development
production:
  <<: *combined
  database: diaspora_production
test:
  <<: *combined
  database: diaspora_test
integration1:
  <<: *combined
  database: diaspora_integration1
integration2:
  <<: *combined
  database: diaspora_integration2
